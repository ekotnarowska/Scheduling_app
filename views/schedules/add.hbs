
<h3>Add Schedule</h3>
<form action="/schedules" method="POST" class="row gy-2 gx-3">
  <div class="form-group mb-2">
    <label for="participant">User</label>
    <select class="form-select" name="participant" id="participant" required>
        <option selected disabled>Choose User</option>
          {{#each users}}
         <option value="{{@index}}">{{this.firstname}} {{this.lastname}}</option>
          {{/each}}
    </select>
  </div>
  <div class="form-group mb-2">
    <label for="day">Day</label>
    <select class="form-select" name="day" id="day" required>
        <option selected disabled>Choose Day</option>
          {{#each days}}
        <option value="{{counter @index}}">{{this}}</option>
          {{/each}}
    </select>
  </div>
  <div class="col-md-2">
    <label for="start_at" class="form-label">Start At</label>
    <select class="form-select" name="start_at" id="start_at" required>
      <option selected disabled>Choose Hour</option>
       {{#each hours}}
      <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
  </div>
  <div class="col-md-1">
    <label for="time_start" class="form-label">AM/PM</label>
    <select class="form-select" name="time_start" id="time_start" required>
      <option value="AM" selected>AM</option>
      <option value="PM" >PM</option>
   </select>
  </div>

<div class="col-md-2">
    <label for="end_at" class="form-label">End At</label>
    <select class="form-select" name="end_at" id="end_at" required>
      <option selected disabled>Choose Hour</option>
       {{#each hours}}
      <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
  </div>
  <div class="col-md-1">
    <label for="time_end" class="form-label">AM/PM</label>
    <select class="form-select" name="time_end" id="time_end" required>
      <option value="AM" selected>AM</option>
      <option value="PM">PM</option>
   </select>
  </div>
  <div class=""></div>
    <div class="col-md-1">
      <a href='/schedules' role="button"  class="btn btn-light btn-block me-2 mt-4">Cancel</a>
    </div>
    <div class="col-md-1">
      <input type="submit" value="Add schedule" class="btn btn-secondary btn-block mt-4">
    </div>
</form>
