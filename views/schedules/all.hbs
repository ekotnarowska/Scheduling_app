
<div class='container'>
<h4 class="mb-4 mt-4">{{title}}</h4>
<a href="/schedules/new" class="btn  btn-outline-secondary mt-4"> 
    <i class="bi bi-calendar-plus"></i> Add new schedule</a>
<ul class="list-group list-group-horizontal mt-4">
  <li class="list-group-item d-flex list-group-item-secondary w-100 ">Number</li>
  <li class="list-group-item d-flex list-group-item-secondary w-100 ">Participant</li>
  <li class="list-group-item d-flex list-group-item-secondary w-100 ">Day</li>
  <li class="list-group-item d-flex list-group-item-secondary w-100 ">Time</li>
  <li class="list-group-item d-flex list-group-item-secondary w-100 ">Action</li>
</ul>
    {{#each withUserNameSchedules}}
    <ul class='list-group list-group-horizontal'>
        <li class="list-group-item w-100"><a href="/schedules/{{@index}}" role="button" class="link-secondary text-decoration-none"> {{ counter @index}}. </a></li>
        <li class="list-group-item w-100"><a href="/schedules/{{@index}}" role="button" class="link-secondary text-decoration-none">{{user}}</a></li>
        <li class="list-group-item w-100"><a href="/schedules/{{@index}}" role="button" class="link-secondary text-decoration-none">{{showDays day}}</a></li>
        <li class="list-group-item w-100"><a href="/schedules/{{@index}}" role="button" class="link-secondary text-decoration-none">{{start_at}} : {{end_at}}</a></li>
        <a href='/schedules/{{@index}}' class="list-group-item w-100">Show details</a>
    </ul>
 {{/each}}
 <a href="/" class="btn  btn-outline-secondary mt-4"><i class="bi bi-caret-left-fill"></i> Homepage</a>
 </div>
 </div>
